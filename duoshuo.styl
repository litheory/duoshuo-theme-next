
.theme-next {
  $duoshuoBaseBorderColor = #c7d4e1;
  $duoshuoBaseBgColor = #f6f8fa;
#ds-thread{
  margin-bottom:40px;
}
  #ds-thread #ds-reset {
    color: #555;
  }
  /* 去除喜欢下面的分割线*/
#ds-thread #ds-reset .ds-meta {
  border:none;
  text-align: center;
}

#ds-thread #ds-reset .ds-like-panel {
  line-height: 60px;
  font-family: 'Roboto Slab', 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
  font-size: 16px;
}
/* 喜欢按钮  居中 圆形 */
#ds-thread #ds-reset a.ds-like-thread-button {
  display: block;
  width: 80px;z
  height: 80px;
  border-radius: 50px;
  padding: 10px;
  margin: 0 auto;
}
#ds-thread #ds-reset a.ds-like-thread-button span{
  font-family: 'Roboto Slab', 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
  font-size: 16px;
}
/* 喜欢按钮 心形 */
#ds-thread #ds-reset a.ds-like-thread-button .ds-icon-heart  {
  background: none;
  width: 40px;
  height: 40px;
  display: block;
  padding-top: 20px;
  margin: 0 auto;
}
/* 自定义心形 '\f004'是fa对应的心形编码 */
#ds-thread #ds-reset a.ds-like-thread-button .ds-icon-heart:before {
  content: '\f004';
  display: block;
  font: normal normal normal 14px/1 FontAwesome;
  font-size: 40px;
  color: #999;
  text-rendering: auto;
}
#ds-thread #ds-reset a.ds-like-thread-button {
  border:none;
  background:#eee;
}
#ds-thread #ds-reset a.ds-thread-liked .ds-icon-heart:before {
  color: rgb(252, 120, 120);
}
/*评论字体*/
#ds-thread #ds-reset .ds-comment-body p{
  font-family: 'Roboto Slab', 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
  padding: 5px 0;
  font-weight: 400;
  line-height: 1.5;
}
/*高亮字体（“n条评论”，“n条微博”，评论者名字的颜色）*/
#ds-thread #ds-reset .ds-highlight{
  font-family: 'Roboto Slab', 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
  color: #000  !important;
  font-weight: 400;
}
/*隐藏版权信息*/
#ds-thread #ds-reset .ds-powered-by a{
  display: none !important;
}
#ds-thread #ds-reset li.ds-post{
  border: none;
}
#ds-thread #ds-reset .ds-post-self{
  margin: 1em auto;
  padding: 1em;
  margin-bottom: 1em;
  border-bottom: solid 3px #ccc;
  border-right: solid 4px #eee;
}

  #ds-thread #ds-reset .ds-replybox {
    margin-bottom: 30px;
  }

  #ds-thread #ds-reset .ds-replybox .ds-avatar, #ds-reset .ds-avatar img {
    box-shadow: none;
  }

  #ds-thread #ds-reset .ds-textarea-wrapper {
    border:3px solid #c9c9cb;
    background: none;
    border-top-right-radius: 2px;
    border-top-left-radius: 2px;
    transition: 0.5s all ease;
    -webkit-transition: 0.5s all ease;
    -moz-transition: 0.5s all ease;
    -o-transition: 0.5s all ease;
    -ms-transition: 0.5s all ease;
  }

  #ds-thread #ds-reset .ds-textarea-wrapper:hover{
    border-color:#595959;
    transition: 0.5s all ease;
    -webkit-transition: 0.5s all ease;
    -moz-transition: 0.5s all ease;
    -o-transition: 0.5s all ease; 
    -ms-transition: 0.5s all ease;
  }
/*评论框调高，内部字体修饰*/
#ds-thread #ds-reset .ds-textarea-wrapper textarea {
  /*height: 60px*/
  height: 120px;
  font-family: 'Monda', 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
  font-size: 16px;
}

  #ds-reset .ds-rounded-top {
    border-radius: 0;
  }
/*工具栏取消边框，背景调白*/
#ds-thread #ds-reset .ds-post-toolbar {
  /*box-sizing: border-box;*/
  /*border: 1px solid #e6e6e6;*/
  background: #fff;
}

  #ds-thread #ds-reset .ds-post-options {
    height: 0px;
    border: none;
    background: none;
  }

  #ds-thread #ds-reset .ds-toolbar-buttons {
    top:-25px;
  }
/*评论分享隐藏，一般用不着*/
#ds-thread #ds-reset .ds-sync {
  /*top: 5px;*/
  display: none !important;
}
/*按钮扁平化*/
#ds-thread #ds-reset .ds-post-button {
  /*top: 4px;
  right: 5px;*/
  width: 90px;
  height: 40px;
  /*border: 1px solid #c5ced7;*/
  border-radius: 1px;
  background-image: linear-gradient(#333, #222);
  color: #60676d;
  border: none;
  font-weight: 200;
  color: #fff;
  font-size: 16px;
  background-color: #444;
}

  #ds-thread #ds-reset .ds-post-button:hover {
    background-position: 0 -40px;
    color: #ddd;
  }

  #ds-thread #ds-reset .ds-comments-info {
    padding: 10px 0;
  }
#ds-thread #ds-reset .ds-comments{
  border: none;
}

  #ds-thread #ds-reset .ds-sort {
    display: none;
  }

  #ds-thread #ds-reset li.ds-tab a.ds-current {
    border: none;
    background: rgb(245,245,245);
    color: #60676d;

    &:hover {
      background-color: #e9f0f7;
      color: #60676d;
    }
  }

  #ds-thread #ds-reset li.ds-tab a {
    border-radius: 2px;
    padding: 5px;
  }

  #ds-thread #ds-reset .ds-login-buttons p {
    color: #999;
    line-height: 36px;
  }

  #ds-thread #ds-reset .ds-login-buttons .ds-service-list li {
    height: 28px;
  }

  #ds-thread #ds-reset .ds-service-list a {
    background: none;
    padding: 5px;
    border: 1px solid;
    border-radius: 3px;
    text-align: center;

    &:hover {
      color: #fff;
      background: #666;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-weibo {
    color: #fc9b00;
    border-color: #fc9b00;

    &:hover {
      background: #fc9b00;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-qq {
    color: #60a3ec;
    border-color: #60a3ec;

    &:hover {
      background: #60a3ec;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-renren {
    color: #2e7ac4;
    border-color: #2e7ac4;

    &:hover {
      background: #2e7ac4;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-douban {
    color: #37994c;
    border-color: #37994c;

    &:hover {
      background: #37994c;
    }
  }
  #ds-thread #ds-reset .ds-service-list .ds-kaixin {
    color: #fef20d;
    border-color: #fef20d;

    &:hover {
      background: #fef20d;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-netease {
    color: #f00;
    border-color: #f00;

    &:hover {
      background: #f00;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-sohu {
    color: #ffcb05;
    border-color: #ffcb05;

    &:hover {
      background: #ffcb05;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-baidu {
    color: #2831e0;
    border-color: #2831e0;

    &:hover {
      background: #2831e0;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-google {
    color: #166bec;
    border-color: #166bec;

    &:hover {
      background: #166bec;
    }
  }

  #ds-thread #ds-reset .ds-service-list .ds-weixin {
    color: #00CE0D;
    border-color: #00CE0D;

    &:hover {
      background: #00CE0D;
    }
  }
  #ds-thread #ds-reset .ds-service-list .ds-more-services {
    border: none;
    &:hover {
      background: none;
    }
  }

/*duoshuo UA style begin*/

  #ds-reset .duoshuo-ua-admin {
    display: inline-block;
    color: #fff;
    padding: 2px 5px;
    line-height: 1.2em;
    border-radius: 2px;
    background-color: #fff;
  }

  #ds-reset .duoshuo-ua-platform,
  #ds-reset .duoshuo-ua-browser {
    color: #ccc;

    .fa {
      display: inline-block;
      margin-right: 3px;
    }
  }

  #ds-reset .duoshuo-ua-separator {
    display: inline-block;
    margin-left: 5px;
  }

